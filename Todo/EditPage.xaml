<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Todo.EditPage"
             Title="Edit Task">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="DeleteToolbar" Text="Delete" Clicked="OnDeleteClicked" Order="Primary" Priority="0" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="12" Spacing="12">
        <Entry x:Name="TitleEntry" Placeholder="Title" />
        <Editor x:Name="DescriptionEditor" HeightRequest="120" Placeholder="Description" />

        <HorizontalStackLayout Spacing="12">
            <Button Text="Save" Clicked="OnSaveClicked" HorizontalOptions="StartAndExpand" />
            <Button x:Name="DeleteBtn" Text="Delete" Clicked="OnDeleteClicked" IsVisible="False" HorizontalOptions="End" />
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>
